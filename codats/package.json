{
  "name": "codats",
  "displayName": "CODATS",
  "description": "AI-assisted static code security analyzer for JavaScript, Python, and Java",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/codats/codats-extension.git"
  },
  "publisher": "codats",
  "license": "MIT",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Linters",
    "Security"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onCommand:codats.scan",
    "onCommand:codats.scanAll",
    "onCommand:codats.clear"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codats.scan",
        "title": "CODATS: Scan Current File",
        "category": "CODATS"
      },
      {
        "command": "codats.scanAll",
        "title": "CODATS: Scan All Files in Workspace",
        "category": "CODATS"
      },
      {
        "command": "codats.clear",
        "title": "CODATS: Clear All Diagnostics",
        "category": "CODATS"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
